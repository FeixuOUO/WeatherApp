{
    "version": 2,
    "builds": [
        {
            "src": "api.py",
            "use": "@vercel/python",
            "config": {
                "wsgiApplication": "api.app", 
                "runtime": "python3.11" // *** 修正 1: 使用較新的穩定版本 ***
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)", 
            "dest": "api.py" // 匹配 /api/weather?city=... 並導向 api.py
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}